{
  "mcpServers": {
    "morph-mcp": {
      "command": "/opt/homebrew/bin/npx",
      "args": ["-y", "@morphllm/morphmcp@latest"],
      "env": {
        "MORPH_API_KEY": "sk-liDhZ47BrNHWYOdRWx0ro48J5pxwAo9hk5i8YRcvQcnRa3nk",
        "ENABLED_TOOLS": "all",
        "DEBUG": "true"
      }
    },
    "cto": {
      "command": "/opt/homebrew/bin/cto-mcp",
      "args": []
    },
    "firecrawl": {
      "command": "/opt/homebrew/bin/firecrawl-mcp",
      "args": [],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "tools": {
      "command": "/opt/homebrew/bin/tools-client",
      "args": ["--working-dir", "/Users/jonathon/cto"],
      "env": {
        "TOOLS_SERVER_URL": "http://localhost:3001/mcp"
      }
    },
    "context7": {
      "command": "/opt/homebrew/bin/npx",

      "args": ["-y", "@upstash/context7-mcp"],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "shadcn": {
      "command": "/opt/homebrew/bin/npx",
      "args": ["-y", "@jpisnice/shadcn-ui-mcp-server"]
    },
    "ai-elements": {
      "command": "/opt/homebrew/bin/npx",
      "args": ["-y", "mcp-remote", "https://registry.ai-sdk.dev/api/mcp"]
    },
    "docker": {
      "command": "uvx",
      "args": ["mcp-server-docker"]
    },
    "linear": {
      "url": "https://mcp.linear.app/sse",
      "env": {
        "LINEAR_API_KEY": "${LINEAR_API_KEY}"
      }
    },
    "prometheus": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "--network", "kind", "-e", "PROMETHEUS_URL", "ghcr.io/pab1it0/prometheus-mcp-server:latest"],
      "env": {
        "PROMETHEUS_URL": "http://172.18.0.2:30090"
      }
    },
    "loki": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "--network", "kind", "-e", "LOKI_URL=http://172.18.0.2:30100", "loki-mcp-server:latest"]
    },
    "grafana": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "--network", "kind", "-e", "GRAFANA_URL", "-e", "GRAFANA_USERNAME", "-e", "GRAFANA_PASSWORD", "mcp/grafana", "-t", "stdio"],
      "env": {
        "GRAFANA_URL": "http://172.18.0.2:30030",
        "GRAFANA_USERNAME": "admin",
        "GRAFANA_PASSWORD": "${GRAFANA_PASSWORD}"
      }
    },
    "argo-workflows": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "--network", "host", "-e", "ARGO_BASE_URL=http://192.168.1.77:30081", "-e", "ARGO_NAMESPACE=cto", "-e", "MCP_ALLOW_MUTATIONS=true", "-e", "MCP_ALLOW_DESTRUCTIVE=false", "ghcr.io/heapy/argo-workflows-mcp:main"]
    },
    "argocd-home": {
      "command": "/opt/homebrew/bin/npx",
      "args": ["argocd-mcp@latest", "stdio"],
      "env": {
        "ARGOCD_BASE_URL": "http://192.168.1.77:30080",
        "ARGOCD_API_TOKEN": "${ARGOCD_API_TOKEN}"
      }
    },
    "latitudesh": {
      "command": "/opt/homebrew/bin/npx",
      "args": ["-y", "latitudesh", "start", "--bearer", "${LATITUDE_API_KEY}"],
      "env": {
        "LATITUDE_API_KEY": "${LATITUDE_API_KEY}"
      }
    }
  }
}
